{
  "name": "sync_idb",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "test": "bun test",
    "build": "tsc",
    "build:all": "bun run build:linux-x64 && bun run build:linux-arm64 && bun run build:windows && bun run build:macos && bun run build:macos-arm64",
    "build:linux-x64": "bun build src/index.ts --outfile dist/sync_idb-linux-x64 --target bun --compile --minify",
    "build:linux-arm64": "bun build src/index.ts --outfile dist/sync_idb-linux-arm64 --target bun --compile --minify",
    "build:windows": "bun build src/index.ts --outfile dist/sync_idb-windows.exe --target bun --compile --minify",
    "build:macos": "bun build src/index.ts --outfile dist/sync_idb-macos-x64 --target bun --compile --minify",
    "build:macos-arm64": "bun build src/index.ts --outfile dist/sync_idb-macos-arm64 --target bun --compile --minify"
  },
  "dependencies": {
    "hono": "^4.9.10",
    "idb-manager": "^1.1.9",
    "json-obj-manager": "^1.4.5"
  },
  "devDependencies": {
    "@types/bun": "latest"
  }
}
